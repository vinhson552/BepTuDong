                                    <ComboBox x:Name="cbUnit2" materialDesign:HintAssist.Hint="Unit 2" IsEditable="True" Height="40" Margin="15 15 15 0" ItemsSource="{Binding ListUnit}" Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
